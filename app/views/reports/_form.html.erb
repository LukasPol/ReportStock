<%= simple_form_for(@report) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :attachment, as: :file,
                wrapper_html: { class: 'mb-4 block' },
                input_html: { class: 'shadow'},
                label_html: { class: 'block text-gray-700 text-sm font-bold mb-2' } %>
  </div>

  <div class="form-actions mt-3 text-center">
    <%= f.button :submit, t(:create_model, model: t(:report, scope: 'activerecord.models')), class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded' %>
  </div>
<% end %>
