<p style="color: green"><%= notice %></p>

<div>
  <p><%= t(:finalized_report) %></p>

  <%= link_to t(:download),
              report_download_path(@report),
              class: 'bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded block text-center w-full' %>
</div>

<div class="mt-5 text-center">
  <%= link_to t(:generate_model, model: t(:report, scope: 'activerecord.models')),
              root_path,
              class: 'bg-gray-200 text-black font-bold py-2 px-4 block w-full rounded' %>

  <%= button_to t(:destroy),
                @report,
                method: :delete,
                class: 'w-full bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mt-3 mx-auto' %>
</div>
